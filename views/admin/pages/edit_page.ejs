<%- include('../../layout/admin_header') %>

    <h2 class="page-title">EDIT PAGE</h2>
    <a href="/admin/pages" class="btn btn-primary">Back to Admin page</a>
    <br><br>
    <form method="POST" action="/admin/pages/edit-page/<%= id %>">

        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
        </div>

        <div class="form-group">
            <label for="">Slug</label>
            <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
        </div>

        <div class="form-group">
            <label for="">Content</label>
            <textarea id="ta" name="content" class="form-control" placeholder="Content" cols="30" rows="10"><%= content %></textarea>
        </div>

        <button class="btn btn-default">Submit</button>
    </form>

<%- include('../../layout/admin_footer') %>