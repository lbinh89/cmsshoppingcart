<%- include('../../layout/admin_header') %>

<h2 class="page-title">PRODUCTS</h2>
<a href="/admin/products/add-product" class="btn btn-primary">Add a new product</a>
<br><br>

<% if (count > 0) {%>

<table class="table table-striped middle">

    <thead>
    <tr class="home">
        <th>Product</th>
        <th>Price</th>
        <th>Category</th>
        <th>Description</th>
        <th>Product Image</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    </thead>

    <tbody>
        <% products.forEach(function (product){ %>
            <tr>
                <td><%= product.title %></td>
                <td>$<%= parseFloat(product.price).toFixed(2) %></td>
                <td><%= product.category %></td>
                <td><%= product.desc %></td>
                <td>

                    <% if (product.image == "") { %>
                        <img src="/images/noimage.png" class="img-responsive proImg">
                    <% } else { %>
                        <img src="/product_images/<%= product._id %>/<%= product.image %>" class="img-responsive proImg">
                    <% } %>

                </td>
                <td><a href="/admin/products/edit-product/<%= product._id %>">Edit</a></td>
                <td><a class="confirmDelete" href="/admin/products/delete-product/<%= product._id %>">Delete</a></td>
            </tr>
        <% }) %>
    </tbody>

</table>


<% } else { %>
    <h2 class="text-center">THERE ARE NO PRODUCTS</h2>
<% } %>

<%- include('../../layout/admin_footer') %>